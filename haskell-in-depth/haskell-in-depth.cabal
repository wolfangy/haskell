                      text == 1.2.*
    ghc-options:
        -Wall
        -Wincomplete-uni-patterns
    default-extensions:
        OverloadedStrings
    default-language: Haskell2010

executable vocab3
    hs-source-dirs:   ch01
    main-is:          vocab3.hs

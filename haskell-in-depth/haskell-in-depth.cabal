        base ^>=4.15.0.0,
        text == 1.2.*,
        fmt,
    ghc-options:
        -Wall
        -Wincomplete-uni-patterns
    default-extensions:
        OverloadedStrings
    default-language: Haskell2010

executable radar
    hs-source-dirs:   ch02/radar
    main-is:          Main.hs
    other-modules:    Radar
    build-depends:
        base ^>=4.15.0.0,
        text == 1.2.*,
        fmt,
    ghc-options:
        -Wall
        -Wincomplete-uni-patterns
    default-extensions:
        OverloadedStrings,
        GADTs,
        DeriveAnyClass,
        StandaloneDeriving
    default-language: Haskell2010